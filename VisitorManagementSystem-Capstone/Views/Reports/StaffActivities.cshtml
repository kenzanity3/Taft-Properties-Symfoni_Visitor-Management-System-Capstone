@{
    ViewBag.Title = "Staff Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .report-wrapper {
        padding: 40px 25px;
        background: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .report-header h2 {
        color: #1A2C4E;
        font-weight: bold;
    }

    .summary-cards {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .summary-card {
        flex: 1;
        min-width: 200px;
        background: #1A2C4E;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
        padding: 20px;
        text-align: center;
    }

        .summary-card h5,
        .summary-card span {
            color: #ffffff;
            font-weight: 600;
        }

        .summary-card span {
            font-size: 1.5rem;
        }

    thead th {
        background-color: #1A2C4E;
        color: #ffffff;
        text-align: center;
    }

    .table td,
    .table th {
        vertical-align: middle;
        text-align: center;
    }

    .btn-custom {
        border-radius: 8px;
    }

    .badge {
        font-size: 0.9rem;
    }
</style>

<div class="container mt-4">
    <div class="report-wrapper">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center report-header mb-4">
            <h2>📊 Staff Activities Report</h2>
            <div class="d-flex gap-2">
                <button onclick="location.reload()" class="btn btn-dark btn-custom">🔁 Refresh</button>
                <button class="btn btn-success btn-custom">⬇️ Export</button>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <h5>Total Facilities</h5>
                <span>12</span>
            </div>
            <div class="summary-card">
                <h5>Currently Used</h5>
                <span>5</span>
            </div>
            <div class="summary-card">
                <h5>Available</h5>
                <span>7</span>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped shadow-sm bg-white rounded">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Facility</th>
                        <th>User</th>
                        <th>Time In</th>
                        <th>Time Out</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2025-07-12</td>
                        <td>Swimming Pool</td>
                        <td>Juan Dela Cruz</td>
                        <td>08:00 AM</td>
                        <td>10:00 AM</td>
                        <td><span class="badge bg-success">Completed</span></td>
                    </tr>
                    <tr>
                        <td>2025-07-12</td>
                        <td>Gym Room</td>
                        <td>Maria Santos</td>
                        <td>09:30 AM</td>
                        <td>--</td>
                        <td><span class="badge bg-warning text-dark">Ongoing</span></td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>
