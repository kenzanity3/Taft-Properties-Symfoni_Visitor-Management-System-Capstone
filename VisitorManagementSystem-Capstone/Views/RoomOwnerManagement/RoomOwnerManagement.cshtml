@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Call this validation before form submission
        $('#createRoomOwnerForm').on('submit', function(e) {
            if (!validateEmergencyContact()) {
                e.preventDefault();
                return false;
            }
        });
        //Create Modal
        $(document).ready(function() {
            $('#createRoomOwnerForm').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var formData = new FormData(this);
                
                // Make sure all required fields are included
                formData.append('Tower', $('#createTower').val());
                formData.append('FloorLevel', $('#createFloorLevel').val());
                formData.append('RoomNumberSuffix', $('#createRoomUnitNumber').val());

                var submitBtn = form.find('button[type="submit"]');

                // Show loading state
                submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Creating...');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                       if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        html: `Room owner created successfully!<br><br>
                              <strong>Generated Password:</strong> ${response.generatedPassword}<br>
                              Please provide this to the room owner.`,
                        showConfirmButton: true,
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $('#createRoomOwnerModal').modal('hide');
                            location.reload();
                        }
                    });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                html: response.message,
                                showConfirmButton: true
                            });
                        }
                    },
                    error: function(xhr) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            html: 'An unexpected error occurred. Please try again.',
                            showConfirmButton: true
                        });
                    },
                    complete: function() {
                        submitBtn.prop('disabled', false).html('Create');
                    }
                });
            });

            // Reset form when modal is closed
            $('#createRoomOwnerModal').on('hidden.bs.modal', function() {
                $(this).find('form')[0].reset();
                $('#createProfilePreview').attr('src', '/images/default.png');
                $('#roomNumberPreview').text('Room number will appear here');
            });
        });

        // Real-time validation
        $('#createRoomNumber, #createFloor').on('input', function() {
            $(this).removeClass('is-invalid');
            $('#' + this.id + 'Error').text('');
        });
      
        // Real-time image preview function
        function previewImage(input, imgId) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    $('#' + imgId).attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Edit Modal Population
        $(document).on('click', '.edit-room-owner-btn', function() {
            const btn = $(this);

            // Set IDs
            $('#editUserId').val(btn.data('userid'));
            $('#editOwnerId').val(btn.data('ownerid'));
            $('#editAccountId').val(btn.data('accountid'));

            // Set profile picture
            const profilePic = btn.data('profilepic') || '/images/default.png';
            $('#editProfilePreview').attr('src', profilePic);

            // Set personal info
            $('#editFirstName').val(btn.data('firstname'));
            $('#editLastName').val(btn.data('lastname'));
            $('#editMiddleName').val(btn.data('middlename') || '');
            $('#editEmail').val(btn.data('email'));
            $('#editContactNumber').val(btn.data('contact'));
            $('#editUsername').val(btn.data('username'));
            $('#editPassword').val(btn.data('password'));

            // Set emergency contact info
            $('#editEmergencyContactPerson').val(btn.data('emergencycontactperson') || '');
            $('#editEmergencyContactNumber').val(btn.data('emergencycontactnumber') || '');
        });

        // INFO Modal Population
        $(document).on('click', '.info-room-owner-btn', function() {
            const btn = $(this);

            // Helper function to handle null/undefined values
            const getData = (key) => {
                const val = btn.data(key);
                return val !== undefined && val !== null ? val : 'N/A';
            };

            // Set profile picture
            const profilePic = getData('profilepic') || '/images/default.png';
            $('#infoProfilePic').attr('src', profilePic);

            // Set name and username
            $('#infoFullName').text(
                `${getData('firstname')} ${getData('middlename')} ${getData('lastname')}`.trim()
            );
            $('#infoUsername').text(getData('username'));

            // Set IDs and contact info
            $('#infoOwnerId').text(getData('ownerid'));
            $('#infoEmail').text(getData('email'));
            $('#infoContact').text(getData('contact'));
            $('#infoDateCreated').text(getData('datecreated'));
            $('#infoPassword').val(getData('password'));

            // Set emergency contact info
            $('#infoEmergencyContactPerson').text(getData('emergencycontactperson'));
            $('#infoEmergencyContactNumber').text(getData('emergencycontactnumber'));

            // Set room info
            $('#infoRoomNumber').text(getData('roomnumber'));
            $('#infoTower').text(getData('tower'));
            $('#infoFloorLevel').text(getData('floorlevel'));
            $('#infoMoveInDate').text(getData('moveindate'));
            $('#infoOccupancyStatus').text(getData('occupancystatus'));

            // Set status badge
            const status = getData('status');
            $('#infoStatus')
                .text(status)
                .removeClass('bg-success bg-danger')
                .addClass(status === 'Active' ? 'bg-success' : 'bg-danger');
        });

        // Toggle password visibility
        function togglePasswordVisibility(inputId) {
            const input = $('#' + inputId);
            const icon = input.next().find('i');

            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
                icon.removeClass('bi-eye').addClass('bi-eye-slash');
            } else {
                input.attr('type', 'password');
                icon.removeClass('bi-eye-slash').addClass('bi-eye');
            }
        }

        //Search Room Owner
        $(document).ready(function () {
            $('#roomOwnerSearch').on('keyup', function () {
                const value = $(this).val().toLowerCase();
                $('#roomOwnerTable tbody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
        
        // Input validation for numeric fields
        $('#createContactNumber, #editContactNumber').on('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
                // Add validation for emergency contact person (letters only)
        $('#createEmergencyContactPerson, #editEmergencyContactPerson').on('input', function() {
            this.value = this.value.replace(/[^a-zA-Z\s]/g, '');
        });
                // Add validation to ensure emergency contact number is different from primary contact
        function validateEmergencyContact() {
            const contactNumber = $('#createContactNumber').val();
            const emergencyContact = $('#createEmergencyContactNumber').val();

            if (contactNumber && emergencyContact && contactNumber === emergencyContact) {
                $('#createEmergencyContactNumber').addClass('is-invalid');
                $('#emergencyContactError').text('Emergency contact cannot be the same as your contact number');
                return false;
            } else {
                $('#createEmergencyContactNumber').removeClass('is-invalid');
                $('#emergencyContactError').text('');
                return true;
            }

        // Show deleted toggle
        $('#showDeletedToggle').on('change', function() {
            $('#showDeletedForm').submit();
        });

        // Delete Room Owner
        $(document).on('click', '.delete-room-owner-btn', function() {
            var ownerId = $(this).data('ownerid');
            Swal.fire({
                title: 'Are you sure?',
                text: "This will delete the room owner from the list (soft delete).",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("SoftDelete", "RoomOwnerManagement")', { ownerId: ownerId }, function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Deleted!',
                                text: response.message,
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 2000
                            }).then(() => location.reload());
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    });
                }
            });
        });
    </script>

