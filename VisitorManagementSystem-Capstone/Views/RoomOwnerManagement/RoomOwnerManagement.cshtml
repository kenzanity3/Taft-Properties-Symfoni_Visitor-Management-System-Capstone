@using VisitorManagementSystem_Capstone.ViewModels
@model List<VisitorManagementSystem_Capstone.ViewModels.POSTViewModel>;
@{
    ViewData["Title"] = "Room Owner Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/RoomOwnerManagement.css" />

<!-- Room Owner Dashboard Header -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>🏠 Room Owner List</h2>
    </div>
    <div class="roomowner-wrapper">
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <input id="roomOwnerSearch" class="form-control me-2" placeholder="Search Room Owner..." />
            <form method="get" id="showDeletedForm" class="d-flex align-items-center">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="showDeletedToggle"
                           name="showDeleted" @(Convert.ToBoolean(ViewBag.ShowDeleted ?? false) ? "checked" : "")>
                    <label class="form-check-label ms-2" for="showDeletedToggle">Show Deleted Items</label>
                </div>
            </form>
        </div>
        <div>
            <button class="btn btn-refresh" onclick="location.reload()">🔄 Refresh</button>
            <button class="btn btn-add" data-bs-toggle="modal" data-bs-target="#createRoomOwnerModal">➕ Create Room Unit Owner</button>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="roomOwnerTable">
                <thead>
                    <tr>
                        <th>Owner ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Room Number</th>
                        <th>Floor</th>
                        <th>Tower</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">
                                No room owner data available.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var owner in Model)
                        {
                            var fullName = POSTViewModel.fullname(
                            owner.User?.FirstName ?? "",
                            owner.User?.LastName ?? "",
                            owner.User?.MiddleName);

                            var roomNumber = owner.Occupant?.Room?.RoomNumber ?? "N/A";
                            var floorLevel = owner.Occupant?.Room?.FloorLevel ?? "N/A";
                            var tower = owner.Occupant?.Room?.Tower ?? "N/A";
                            var status = owner.User?.AccountStatus == true ? "Active" : "Inactive";

                            <tr>
                                <td>@owner.RoomOwner?.UserId</td>
                                <td>@fullName</td>
                                <td>@(owner.Account?.Email ?? "N/A")</td>
                                <td>@(owner.User?.ContactNumber ?? "N/A")</td>
                                <td>@roomNumber</td>
                                <td>@(owner.Occupant?.Room?.FloorLevel ?? "N/A")</td>
                                <td>@tower</td>
                                <td>
                                    <span class="badge @(status == "Active" ? "bg-success" : "bg-danger")">@status</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-info info-room-owner-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#infoRoomOwnerModal"
                                            data-userid="@owner.User?.UserId"
                                            data-ownerid="@owner.RoomOwner?.UserId"
                                            data-accountid="@owner.Account?.AccountId"
                                            data-firstname="@owner.User?.FirstName"
                                            data-middlename="@owner.User?.MiddleName"
                                            data-lastname="@owner.User?.LastName"
                                            data-email="@owner.Account?.Email"
                                            data-username="@owner.Account?.Username"
                                            data-password="@owner.Account?.Password"
                                            data-contact="@owner.User?.ContactNumber"
                                            data-profilepic="@owner.RoomOwner?.RoomOwnerProfilePicture"
                                            data-emergencycontactperson="@owner.RoomOwner?.EmergencyContactName"
                                            data-emergencycontactnumber="@owner.RoomOwner?.EmergencyContactNumber"
                                            data-roomnumber="@roomNumber"
                                            data-tower="@tower"
                                            data-floorlevel="@floorLevel"
                                            data-moveindate="@owner.Occupant?.MoveInDate?.ToString("yyyy-MM-dd")"
                                            data-datecreated="@owner.User?.DateCreated.ToString("yyyy-MM-dd")"
                                            data-occupancystatus="@(owner.Occupant?.OccupationStatus == true ? "Active" : "Inactive")"
                                            data-status="@status">
                                        <i class="bi bi-info-circle"></i> Details
                                    </button>

                                    <button class="btn btn-sm btn-warning edit-room-owner-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editRoomOwnerModal"
                                            data-userid="@owner.User?.UserId"
                                            data-ownerid="@owner.RoomOwner?.UserId"
                                            data-accountid="@owner.Account?.AccountId"
                                            data-firstname="@owner.User?.FirstName"
                                            data-middlename="@owner.User?.MiddleName"
                                            data-lastname="@owner.User?.LastName"
                                            data-email="@owner.Account?.Email"
                                            data-username="@owner.Account?.Username"
                                            data-password="@owner.Account?.Password"
                                            data-contact="@owner.User?.ContactNumber"
                                            data-profilepic="@owner.RoomOwner?.RoomOwnerProfilePicture"
                                            data-emergencycontactperson="@owner.RoomOwner?.EmergencyContactName"
                                            data-emergencycontactnumber="@owner.RoomOwner?.EmergencyContactNumber">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>

                                    <button class="btn btn-sm btn-danger delete-room-owner-btn"
                                            data-ownerid="@owner.RoomOwner?.UserId">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Room Owner Modal -->
<div class="modal fade" id="createRoomOwnerModal" tabindex="-1" aria-labelledby="createRoomOwnerLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Create" method="post" enctype="multipart/form-data" id="createRoomOwnerForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="createRoomOwnerLabel">➕ Add New Room Owner</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 text-center">
                        <img id="createProfilePreview" src="~/images/default.png" alt="Profile Picture"
                             class="profile-img-preview rounded-circle border" style="width: 150px; height: 150px; object-fit: cover;" />
                        <input id="createProfilePic" name="UserProfilePicture" type="file"
                               class="form-control mt-2" accept="image/*"
                               onchange="previewImage(this, 'createProfilePreview')" />
                    </div>

                    <!-- Personal Information Section -->
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Personal Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="createFirstName" class="form-label">First Name</label>
                                    <input id="createFirstName" name="User.FirstName" class="form-control" required
                                           placeholder="Enter first name" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="createMiddleName" class="form-label">Middle Name</label>
                                    <input id="createMiddleName" name="User.MiddleName" class="form-control"
                                           placeholder="Enter middle name (optional)" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="createLastName" class="form-label">Last Name</label>
                                    <input id="createLastName" name="User.LastName" class="form-control" required
                                           placeholder="Enter last name" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="createEmail" class="form-label">Email</label>
                                    <input id="createEmail" name="Account.Email" class="form-control" type="email" required
                                           placeholder="example@email.com" />
                                    <div class="invalid-feedback" id="emailError"></div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="createContactNumber" class="form-label">Contact Number</label>
                                    <input id="createContactNumber" name="User.ContactNumber" class="form-control"
                                           maxlength="11" minlength="11" required pattern="^09\d{9}$"
                                           inputmode="numeric" placeholder="09171234567" />
                                    <div class="invalid-feedback" id="contactError"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Room Information Section -->
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Room Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="createTower" class="form-label">Tower</label>
                                    <select id="createTower" name="Tower" class="form-select" required>
                                        <option value="">Select Tower</option>
                                        <option value="Bossa">Bossa Tower</option>
                                        <option value="Alto">Alto Tower</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="createFloorLevel" class="form-label">Floor Level</label>
                                    <select id="createFloorLevel" name="FloorLevel" class="form-select" required>
                                        <option value="">Select Floor</option>
                                        <option value="Upper Ground">Upper Ground</option>
                                        <option value="Second Floor">Second Floor</option>
                                        <option value="Third Floor">Third Floor</option>
                                        <option value="Fourth Floor">Fourth Floor</option>
                                        <option value="Fifth Floor">Fifth Floor</option>
                                        <option value="Sixth Floor">Sixth Floor</option>
                                        <option value="Seventh Floor">Seventh Floor</option>
                                        <option value="Eighth Floor">Eighth Floor</option>
                                        <option value="Ninth Floor">Ninth Floor</option>
                                        <option value="Tenth Floor">Tenth Floor</option>
                                        <option value="Eleventh Floor">Eleventh Floor</option>
                                        <option value="Twelfth Floor">Twelfth Floor</option>
                                        <option value="Thirteenth Floor">Thirteenth Floor</option>
                                        <option value="Fourteenth Floor">Fourteenth Floor</option>
                                        <option value="Fifteenth Floor">Fifteenth Floor</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="createRoomUnitNumber" class="form-label">Room Unit Number</label>
                                    <input id="createRoomUnitNumber" name="RoomNumberSuffix" class="form-control"
                                           maxlength="4" pattern="[0-9]{1,4}" required
                                           placeholder="e.g. 101, 1502"
                                           oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                                    <small class="text-muted">Enter room number (1-9999)</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Emergency Contact Section -->
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Emergency Contact Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="createEmergencyContactPerson" class="form-label">Emergency Contact Person</label>
                                <input id="createEmergencyContactPerson" name="RoomOwner.EmergencyContactName"
                                       class="form-control" required placeholder="Full name of emergency contact" />
                            </div>
                            <div class="mb-3">
                                <label for="createEmergencyContactNumber" class="form-label">Emergency Contact Number</label>
                                <input id="createEmergencyContactNumber" name="RoomOwner.EmergencyContactNumber"
                                       class="form-control" maxlength="11" minlength="11" required pattern="^09\d{9}$"
                                       inputmode="numeric" placeholder="09171234567" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-add">✅ Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

