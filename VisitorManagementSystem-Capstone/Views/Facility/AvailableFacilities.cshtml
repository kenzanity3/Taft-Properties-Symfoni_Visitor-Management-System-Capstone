@{
    ViewBag.Title = "Available Facilities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <<!-- wala ni labot bai na index bai-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
 <<!-- wala ni labot bai na index bai-->
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Segoe UI', sans-serif;
        background: url('https://i.ibb.co/93vs5DkY/cover1.jpg') no-repeat center center fixed;
        background-size: cover;
        overflow-x: hidden;
    }
    <<!-- wala ni labot bai na index bai-->
    
    .facility-container {
        max-width: 1300px;
        margin: auto;
        padding: 60px 30px;
        display: grid;
        gap: 40px;
        grid-template-columns: repeat(auto-fit, minmax(390px, 1fr));
    }

    .facility-grid-box {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        background: rgba(255, 255, 255, 0.92);
        border-radius: 20px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        padding: 25px;
        gap: 20px;
        align-items: center;
        transition: 0.2s ease-in-out;
    }

        .facility-grid-box:hover {
            transform: translateY(-5px);
        }

    .left-card {
        text-align: center;
        flex: 1;
    }

    .facility-icon {
        font-size: 3.2rem;
        color: #0077b6;
    }

    .facility-title {
        font-size: 1.6rem;
        font-weight: 700;
        margin: 12px 0 6px;
        color: #003049;
    }

    .facility-details {
        font-size: 0.95rem;
        color: #333;
    }

    .badge-status {
        margin-top: 8px;
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .bg-available {
        background-color: #d4edda;
        color: #155724;
    }

    .bg-maintenance {
        background-color: #fff3cd;
        color: #856404;
    }

    .info-grid {
        flex: 1;
        font-size: 0.95rem;
        display: grid;
        row-gap: 10px;
    }

        .info-grid div {
            background: #f1f1f1;
            padding: 10px 14px;
            border-radius: 8px;
        }

    .btn-reserve-icon {
        background: none;
        border: none;
        margin-top: 10px;
        font-size: 1.4rem;
        color: #0077b6;
        cursor: pointer;
    }

        .btn-reserve-icon:hover {
            color: #005f91;
        }

    .modal-content {
        border-radius: 18px;
        text-align: center;
    }

    #qrOutput {
        margin-top: 20px;
    }
</style>

<div class="facility-container">
    <!-- Facility 1 -->
    <div class="facility-grid-box">
        <div class="left-card">
            <i class="fas fa-swimmer facility-icon"></i>
            <div class="facility-title">Swimming Pool</div>
            <div class="facility-details">Capacity: 20<br />Floor: Ground</div>
            <span class="badge-status bg-available">Available</span><br />
            <button class="btn-reserve-icon" data-bs-toggle="modal" data-bs-target="#qrModal" onclick="showQR('Swimming Pool')">
                <i class="fas fa-qrcode"></i>
            </button>
        </div>
        <div class="info-grid">
            <div><strong>Open:</strong> 7:00 AM - 9:00 PM</div>
            <div><strong>Slots:</strong> 5 Remaining</div>
            <div><strong>Type:</strong> Recreational</div>
            <div><strong>Staff On-Duty:</strong> Yes</div>
        </div>
    </div>

    <!-- Facility 2 -->
    <div class="facility-grid-box">
        <div class="left-card">
            <i class="fas fa-dumbbell facility-icon"></i>
            <div class="facility-title">Fitness Gym</div>
            <div class="facility-details">Capacity: 15<br />Floor: 2nd</div>
            <span class="badge-status bg-available">Available</span><br />
            <button class="btn-reserve-icon" data-bs-toggle="modal" data-bs-target="#qrModal" onclick="showQR('Fitness Gym')">
                <i class="fas fa-qrcode"></i>
            </button>
        </div>
        <div class="info-grid">
            <div><strong>Open:</strong> 6:00 AM - 10:00 PM</div>
            <div><strong>Slots:</strong> 3 Remaining</div>
            <div><strong>Type:</strong> Workout Area</div>
            <div><strong>Staff On-Duty:</strong> No</div>
        </div>
    </div>

    <!-- Facility 3 -->
    <div class="facility-grid-box">
        <div class="left-card">
            <i class="fas fa-users facility-icon"></i>
            <div class="facility-title">Function Room</div>
            <div class="facility-details">Capacity: 30<br />Floor: 1st</div>
            <span class="badge-status bg-maintenance">Under Maintenance</span>
        </div>
        <div class="info-grid">
            <div><strong>Open:</strong> Temporarily Closed</div>
            <div><strong>Slots:</strong> 0</div>
            <div><strong>Type:</strong> Event Space</div>
            <div><strong>Staff On-Duty:</strong> N/A</div>
        </div>
    </div>
</div>

<!-- QR Modal -->
<div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4">
            <h5 class="modal-title mb-3" id="qrModalLabel">Check-In QR Code</h5>
            <div id="qrOutput"></div>
            <p class="text-muted mt-2">Please present this QR code to the facility staff.</p>
        </div>
    </div>
</div>

<script>
    function showQR(facilityName) {
        const date = new Date().toLocaleString();
        const code = crypto.randomUUID();
        const qrData = `Facility: ${facilityName}\nGenerated: ${date}\nCode: ${code}`;

        document.getElementById("qrOutput").innerHTML = "";
        new QRCode(document.getElementById("qrOutput"), {
            text: qrData,
            width: 200,
            height: 200
        });
    }
</script>
