@{
    ViewBag.Title = "Appointment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f9fafa;
        font-family: 'Segoe UI', sans-serif;
    }

    .page-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .card-modern {
        background-color: #ffffff;
        border-radius: 14px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
        border: none;
    }

        .card-modern .card-header {
            background-color: #f4f6f8;
            color: #2c3e50;
            font-weight: 600;
            border-radius: 14px 14px 0 0;
            border-bottom: 1px solid #e0e0e0;
        }

    .table thead {
        background-color: #f1f3f5;
        color: #2c3e50;
    }

    .status-badge {
        padding: 6px 10px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge-pending {
        background-color: #ffeeba;
        color: #856404;
    }

    .badge-approved {
        background-color: #d4edda;
        color: #155724;
    }

    .badge-declined {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<div class="container-fluid mt-4">
    <h2 class="page-title">📅 Appointment List</h2>

    <div class="card card-modern">
        <div class="card-header">
            Scheduled Appointments
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Visitor Name</th>
                        <th>Unit</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>John Doe</td>
                        <td>Unit 101</td>
                        <td>2025-07-15</td>
                        <td>10:00 AM</td>
                        <td><span class="status-badge badge-approved">Approved</span></td>
                    </tr>
                    <tr>
                        <td>Anna Cruz</td>
                        <td>Unit 203</td>
                        <td>2025-07-15</td>
                        <td>11:30 AM</td>
                        <td><span class="status-badge badge-pending">Pending</span></td>
                    </tr>
                    <tr>
                        <td>Michael Santos</td>
                        <td>Unit 305</td>
                        <td>2025-07-16</td>
                        <td>1:00 PM</td>
                        <td><span class="status-badge badge-declined">Declined</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
