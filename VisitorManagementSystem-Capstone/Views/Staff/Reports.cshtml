@{
    ViewBag.Title = "Staff Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f9fafa;
        font-family: 'Segoe UI', sans-serif;
    }

    .page-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .card-modern {
        background-color: #ffffff;
        border-radius: 14px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
        border: none;
    }

        .card-modern .card-header {
            background-color: #f4f6f8;
            color: #2c3e50;
            font-weight: 600;
            border-radius: 14px 14px 0 0;
            border-bottom: 1px solid #e0e0e0;
        }

    .table thead {
        background-color: #f1f3f5;
        color: #2c3e50;
    }

    .btn-export {
        float: right;
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="page-title">📊 Staff Reports</h2>
        <button class="btn btn-dark btn-export"><i class="fas fa-file-export"></i> Export</button>
    </div>

    <div class="card card-modern">
        <div class="card-header">
            Visitor and Appointment Report
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Visitor Name</th>
                        <th>Unit</th>
                        <th>Date</th>
                        <th>Time In</th>
                        <th>Time Out</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td>Anna Cruz</td><td>101</td><td>2025-07-13</td><td>10:00 AM</td><td>12:00 PM</td><td class="text-success">Completed</td></tr>
                    <tr><td>John Doe</td><td>203</td><td>2025-07-13</td><td>11:00 AM</td><td>1:00 PM</td><td class="text-warning">Pending</td></tr>
                    <tr><td>Maria Lopez</td><td>305</td><td>2025-07-13</td><td>1:30 PM</td><td>-</td><td class="text-danger">Ongoing</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
