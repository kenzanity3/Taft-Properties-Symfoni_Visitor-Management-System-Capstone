@model List<VisitorManagementSystem_Capstone.Models.VisitLog>
@{
    ViewBag.Title = "Visit History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f9fafa;
        font-family: 'Segoe UI', sans-serif;
    }

    .page-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .card-modern {
        background-color: #ffffff;
        border-radius: 14px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
        border: none;
    }

        .card-modern .card-header {
            background-color: #f4f6f8;
            color: #2c3e50;
            font-weight: 600;
            border-radius: 14px 14px 0 0;
            border-bottom: 1px solid #e0e0e0;
        }

    .table thead {
        background-color: #f1f3f5;
        color: #2c3e50;
    }

    .status-badge {
        padding: 6px 10px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge-pending {
        background-color: #ffeeba;
        color: #856404;
    }

    .badge-approved {
        background-color: #d4edda;
        color: #155724;
    }

    .badge-declined {
        background-color: #f8d7da;
        color: #721c24;
    }

    .filter-section {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .filter-btn {
        margin-right: 8px;
        margin-bottom: 8px;
    }

    .no-visits {
        text-align: center;
        padding: 40px 0;
        color: #6c757d;
    }

        .no-visits i {
            font-size: 3rem;
            margin-bottom: 15px;
            display: block;
        }
</style>

<div class="container-fluid mt-4">
    <h2 class="page-title">📅 Visit History</h2>

    <div class="card card-modern">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>History of visitors who attempted to visit you</span>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-filter"></i> Filter
                </button>
                <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                    <li><a class="dropdown-item filter-option" href="#" data-filter="all">All Statuses</a></li>
                    <li><a class="dropdown-item filter-option" href="#" data-filter="approved">Approved Only</a></li>
                    <li><a class="dropdown-item filter-option" href="#" data-filter="declined">Declined Only</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <div class="filter-section">
                <div class="row">
                    <div class="col-md-12">
                        <h6>Time Period:</h6>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary filter-btn active" data-period="all">All Time</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-period="today">Today</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-period="week">This Week</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-period="month">This Month</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-period="year">This Year</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover" id="visitsTable">
                    <thead>
                        <tr>
                            <th>Visitor Name</th>
                            <th>Unit</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Purpose</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var visit in Model)
                            {
                                <tr data-status="@(visit.VerificationStatus == true ? "approved" : "declined")"
                                    data-date="@visit.AppointmentDate?.ToString("yyyy-MM-dd")">
                                    <td>@($"{visit.Visitor?.User?.FirstName} {visit.Visitor?.User?.LastName}")</td>
                                    <td>@visit.Room?.RoomNumber</td>
                                    <td>@visit.AppointmentDate?.ToString("MMM dd, yyyy")</td>
                                    <td>@visit.AppointmentDate?.ToString("hh:mm tt")</td>
                                    <td>
                                        @if (visit.VerificationStatus == true)
                                        {
                                            <span class="status-badge badge-approved">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge badge-declined">Declined</span>
                                        }
                                    </td>
                                    <td>@visit.PurposeOfVisit</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="no-visits">
                                    <i class="fas fa-calendar-times"></i>
                                    <p class="mt-2">No visit history found.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Status filter
            $('.filter-option').on('click', function(e) {
                e.preventDefault();
                const filter = $(this).data('filter');

                // Update dropdown text
                $('#filterDropdown').html(`<i class="fas fa-filter"></i> ${$(this).text()}`);

                // Filter rows
                if (filter === 'all') {
                    $('tr[data-status]').show();
                } else {
                    $('tr[data-status]').hide();
                    $(`tr[data-status="${filter}"]`).show();
                }

                checkEmptyTable();
            });

            // Time period filter
            $('.filter-btn').on('click', function() {
                $('.filter-btn').removeClass('active');
                $(this).addClass('active');

                const period = $(this).data('period');
                const today = new Date();

                $('tr[data-status]').each(function() {
                    const rowDate = new Date($(this).data('date'));
                    let showRow = false;

                    switch(period) {
                        case 'today':
                            showRow = isSameDay(rowDate, today);
                            break;
                        case 'week':
                            showRow = isSameWeek(rowDate, today);
                            break;
                        case 'month':
                            showRow = isSameMonth(rowDate, today);
                            break;
                        case 'year':
                            showRow = isSameYear(rowDate, today);
                            break;
                        default: // all
                            showRow = true;
                    }

                    if (showRow) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });

                checkEmptyTable();
            });

            // Helper functions for date comparisons
            function isSameDay(date1, date2) {
                return date1.getDate() === date2.getDate() &&
                       date1.getMonth() === date2.getMonth() &&
                       date1.getFullYear() === date2.getFullYear();
            }

            function isSameWeek(date1, date2) {
                const firstDayOfWeek = new Date(date2);
                firstDayOfWeek.setDate(date2.getDate() - date2.getDay());

                const lastDayOfWeek = new Date(date2);
                lastDayOfWeek.setDate(date2.getDate() + (6 - date2.getDay()));

                return date1 >= firstDayOfWeek && date1 <= lastDayOfWeek;
            }

            function isSameMonth(date1, date2) {
                return date1.getMonth() === date2.getMonth() &&
                       date1.getFullYear() === date2.getFullYear();
            }

            function isSameYear(date1, date2) {
                return date1.getFullYear() === date2.getFullYear();
            }

            function checkEmptyTable() {
                const visibleRows = $('#visitsTable tbody tr[data-status]:visible').length;

                if (visibleRows === 0) {
                    if ($('#visitsTable tbody tr.no-visits').length === 0) {
                        $('#visitsTable tbody').append(`
                            <tr>
                                <td colspan="6" class="no-visits">
                                    <i class="fas fa-search"></i>
                                    <p class="mt-2">No visits match your filters.</p>
                                </td>
                            </tr>
                        `);
                    }
                } else {
                    $('#visitsTable tbody tr.no-visits').remove();
                }
            }
        });
    </script>
}