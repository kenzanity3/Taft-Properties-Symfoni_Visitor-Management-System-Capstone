@model VisitorManagementSystem_Captstone.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password | Symfoni Nichols</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- custom styles -->
    <link rel="stylesheet" href="~/css/ForgotPassword.css" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <form asp-action="ForgotPassword">
            <div class="reset-container d-flex">
                <!-- Left Side (Branding) -->
                <div class="reset-left col-md-6">
                    <p>Enter your details to reset your account password</p>
                    <div class="logo-name">
                        <img src="/images/symfoni-nicols-logo.png" alt="Symfoni logo" class="login-logo">
                        <h1>Symfoni Nichols Condominium</h1>
                    </div>
                </div>

                <!-- Right Side (Reset Form) -->
                <div class="reset-right col-md-6">
                    <div class="reset-header">
                        <h2>Reset Your Password</h2>
                    </div>

                    <div class="mb-3">
                        <input type="email" class="form-control" id="Email" placeholder="Email" required>
                    </div>

                    <div class="mb-3 input-group">
                        <input type="text" class="form-control" name="verificationCode" id="verificationCode" placeholder="Verification Code" required>
                        <button type="button" class="btn btn-send-code" id="sendCodeBtn" onclick="submitEmail()">Send Code</button>
                    </div>

                    <!-- Hidden Form to Submit Email to the Controller -->
                    <form id="hiddenEmailForm" asp-action="SendVerificationCode">
                        <input type="email" name="email" id="hiddenEmailInput" value="" hidden>
                    </form>

                    <div class="mb-3 password-container input-group">
                        <input type="password" class="form-control" asp-for="Password" placeholder="New Password" id="passwordField" required>
                        <span class="input-group-text">
                            <i class="fas fa-eye" id="togglePassword"></i>
                        </span>
                    </div>

                    <button type="submit" class="btn btn-reset">
                        <i class="fas fa-key me-2"></i> Reset Password
                    </button>

                    <div class="back-to-login">
                        <a asp-action="Index">Back to Login</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @if (TempData["ForgotPassMessage"] != null)
    {
        @if (TempData["ForgotPassMessage"].ToString() == "User account details are incorrect. Please try again.")
        {
            <script>
                const Toast = Swal.mixin({
                    toast: true,
                    position: "top-end",
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                });
                Toast.fire({
                    icon: "error",
                    title: "User account details are incorrect. Please try again."
                });
            </script>
        }
    }

    @if (ViewData["ErrorVerification"] != null)
    {
        @if (ViewData["ErrorVerification"].ToString() == "User account details are incorrect. Please try again.")
        {
            <script>
                const Toast = Swal.mixin({
                    toast: true,
                    position: "top-end",
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                });
                Toast.fire({
                    icon: "error",
                    title: "User account details are incorrect. Please try again."
                });
            </script>
        }

        @if (ViewData["ErrorVerification"].ToString() == "Verification failed. Please try again.")
        {
            <script>
                const Toast = Swal.mixin({
                    toast: true,
                    position: "top-end",
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                });
                Toast.fire({
                    icon: "error",
                    title: "Verification failed. Please try again."
                });
            </script>
        }

        @if (ViewData["ErrorVerification"].ToString() == "Incorrect verification code.")
        {
            <script>
                const Toast = Swal.mixin({
                    toast: true,
                    position: "top-end",
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                });
                Toast.fire({
                    icon: "error",
                    title: "Verification failed. Please try again."
                });
            </script>
        }
    }

    <script>
        function submitEmail() {
            const email = $("#Email").val();
            const hiddenEmail = $("#hiddenEmailInput");

            if (!email) {
                Swal.fire('Error', 'Please enter an email address.', 'error');
                return;
            }

            hiddenEmail.val(email);

            $.ajax({
                url: '/Login/SendVerificationCode',
                type: 'POST',
                data: { email: email },
                success: function (response) {
                    if (response.success === "true") {
                        Swal.fire('Success', response.message, 'success');
                        startCountdown();
                    } else {
                        Swal.fire('Error', response.message, 'error');
                    }
                },
                error: function () {
                    Swal.fire('Error', 'An error occurred while sending the verification code.', 'error');
                }
            });
        }

        function startCountdown() {
            let countdown = 30;
            const sendButton = $('#sendCodeBtn');
            sendButton.prop('disabled', true);
            sendButton.text(`Resend in ${countdown}s`);

            const interval = setInterval(() => {
                countdown--;
                sendButton.text(`Resend in ${countdown}s`);

                if (countdown === 0) {
                    clearInterval(interval);
                    sendButton.text('Send Code');
                    sendButton.prop('disabled', false);
                }
            }, 1000);
        }

        // Password visibility toggle
        const passwordField = document.getElementById('passwordField');
        const togglePassword = document.getElementById('togglePassword');

        togglePassword.addEventListener('click', function() {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            this.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>